    private void BtnLogarActionPerformed(java.awt.event.ActionEvent evt) {                                         
      
        if(txtLogin.getText().equals("otavio") && txtSenha.getText().equals("123")){
            CadastroJogo tela = new CadastroJogo();
            tela.setVisible(true);
            dispose();
        }else {
            JOptionPane.showMessageDialog(null, "USUARIO NAO LOGADO");
        }   
            
    }                                        

    private void BtnLogar1ActionPerformed(java.awt.event.ActionEvent evt) {                                          
            FormCadastroView tela = new FormCadastroView();
            tela.setVisible(true);
            dispose();
    }                                         

